{
    "manifest_version": 3,
   
    "name": "Okta - AWS Account Switcher",
    "version": "5.1.0",
    "description": "The tool to switch AWS account without login",

    "permissions": [
        "storage",
        "cookies",
        "alarms",
        "idle",
        "tabs",
        "scripting",
        "activeTab",
        "notifications"
    ],
    
    "host_permissions": [
        "*://*.amazon.com/*",
        "*://*.okta.com/*",
        "*://*.okta-emea.com/*",
        "*://*.oktapreview.com/*",
        "*://*.sternum.cloud/*",
        "http://*/*",
        "https://*/*"
    ],
   
    "background": {
      "service_worker": "background.js"
    },

    "action": {
      "default_popup": "popup.html"
    },

    "icons": {
      "48": "Icons/aws-logo.png"
    }
}
